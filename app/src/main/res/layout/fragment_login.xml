<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framelayoutlogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etLoginLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginTop="204dp"
            android:layout_marginBottom="58dp"
            android:ems="10"
            android:hint="E-MAIL"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/etPassLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etPassLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="165dp"
            android:ems="10"
            android:hint="PASSWORD"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/tvsignuplogin"
            app:layout_constraintStart_toStartOf="@+id/etLoginLogin"
            app:layout_constraintTop_toBottomOf="@+id/etLoginLogin" />

        <Button
            android:id="@+id/btnloginlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:background="#000000"
            android:backgroundTint="#1C1C1C"
            android:text="LOG IN"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassLogin" />

        <TextView
            android:id="@+id/tvsignuplogin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="201dp"
            android:layout_marginBottom="180dp"
            android:onClick="gotosignup"
            android:text="Sign up"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvforgotpasslogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassLogin" />

        <TextView
            android:id="@+id/tvforgotpasslogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="180dp"
            android:text="Forgotpassword?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvsignuplogin"
            app:layout_constraintTop_toBottomOf="@+id/etPassLogin" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>